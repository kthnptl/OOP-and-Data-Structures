	int count;
	count=1;
while(count<=MAX_ROUNDS)
{
//	int x;
    srand(time(NULL));  // seed the random number generator
    int value;
    value=(rand()%3);
    cout<<value<<"<<<<"<<"\n";
//    rand()+1;
    cout<<"kp";
    value=0;
    count++;
    /***** Complete this main. *****/
}
    return 0;
}


